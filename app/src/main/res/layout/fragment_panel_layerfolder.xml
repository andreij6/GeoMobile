<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parent Folder"
        android:textStyle="bold"
        android:id="@+id/pathTV"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chevron"
        android:layout_alignBottom="@+id/pathTV"
        android:layout_toEndOf="@+id/pathTV"
        android:src="@drawable/ic_chevron_right_grey600_18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Folder"
        android:id="@+id/folderNameTV"
        android:layout_alignBottom="@+id/pathTV"
        android:layout_toEndOf="@+id/chevron"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closeIV"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/scrollView2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pathTV">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                style="@style/TreePanelSectionStyle"
                android:id="@+id/folderInfoSection">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/informationIB"
                    android:src="@drawable/ic_information_outline_black_36dp"
                    style="TreePanelImageViewStyle"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Folder Information"
                    android:id="@+id/informationTV"
                    style="@style/TreePanelTextViewStyle"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                style="@style/TreePanelSectionStyle"
                android:id="@+id/addLayerSection">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/addLayerIV"
                    android:src="@drawable/ic_layers_black_36dp"
                    style="TreePanelImageViewStyle"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Layer"
                    android:id="@+id/addLayerTV"
                    style="@style/TreePanelTextViewStyle"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                style="@style/TreePanelSectionStyle"
                android:id="@+id/addLayerFolderSection">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/addFolderIV"
                    android:src="@drawable/ic_folder_plus_black_36dp"
                    style="TreePanelImageViewStyle"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Add Folder"
                    android:id="@+id/addFolderTV"
                    style="@style/TreePanelTextViewStyle"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>