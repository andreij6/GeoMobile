<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/fab_point"
        android:layout_toEndOf="@+id/fab_point"
        android:background="@color/primary"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/docdetail_actionbar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navigateBackIV"
            android:src="@drawable/ic_chevron_left_white_24dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="-10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/geounderground"
            android:gravity="center"
            android:id="@+id/title"
            android:textSize="18sp"
            android:layout_weight="4"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/optionsIV"
            android:src="@drawable/ic_dropdown"
            android:layout_gravity="center_vertical"
            android:padding="2dp"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/goToMapIV"
            android:src="@drawable/ic_earth_white_36dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        android:background="@color/white"
        android:layout_below="@+id/docdetail_actionbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/backgroundImageView"
                android:layout_centerHorizontal="true"
                android:background="@color/primary"
                android:minHeight="100dp"
                android:src="@drawable/ic_file_document_box_white_24dp"
                android:layout_below="@id/docdetail_actionbar"
                android:contentDescription="@string/document_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/documentNameTV"
                android:layout_below="@+id/backgroundImageView"
                android:layout_alignParentStart="true"
                android:paddingLeft="40dp"
                android:background="@color/primary"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/documentNameET"
                android:layout_below="@+id/documentNameTV"
                android:layout_centerHorizontal="true"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/fileSizeValue"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/fileSizeLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/file_size"
                android:id="@+id/fileSizeLabel"
                android:layout_below="@+id/fileSizeValue"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/uploadTimeValue"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/fileSizeLabel"
                android:layout_alignStart="@+id/fileSizeValue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/upload_time"
                android:id="@+id/uploadTimeLabel"
                android:layout_below="@+id/uploadTimeValue"
                android:layout_alignStart="@+id/fileSizeLabel"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slider_content">
        </RelativeLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>


</RelativeLayout>