<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundImageView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:minHeight="100dp"
        android:src="@drawable/ic_file_document_box_white_24dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:contentDescription="@string/document_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/documentNameTV"
        android:layout_below="@+id/backgroundImageView"
        android:layout_alignParentStart="true"
        android:paddingLeft="40dp"
        android:background="@color/primary"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backImageView"
        android:src="@drawable/ic_arrow_left_bold_white_24dp"
        android:contentDescription="@string/back_arrow"
        android:layout_alignTop="@+id/backgroundImageView"
        android:layout_toEndOf="@+id/documentNameET"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/documentNameET"
        android:layout_below="@+id/documentNameTV"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fileSizeValue"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/documentNameTV"
        android:layout_alignStart="@+id/backImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/file_size"
        android:id="@+id/fileSizeLabel"
        android:layout_below="@+id/fileSizeValue"
        android:layout_toEndOf="@+id/backImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/uploadTimeValue"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/fileSizeLabel"
        android:layout_alignStart="@+id/fileSizeValue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/upload_time"
        android:id="@+id/uploadTimeLabel"
        android:layout_below="@+id/uploadTimeValue"
        android:layout_alignStart="@+id/fileSizeLabel"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:id="@+id/downloadBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>