<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        android:background="@color/primary_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.maps.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:cameraTargetLat="38.3448001"
                map:cameraTargetLng="-96.5878515"
                map:cameraZoom="3" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_map_marker_radius_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_layers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layers_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_below="@+id/fab_location"
                android:layout_alignEnd="@+id/fab_location"
                />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="16dp"
                android:src="@drawable/ic_crosshairs_gps_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_crop_free_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_below="@+id/fab_location"
                android:layout_alignEnd="@+id/fab_location"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/fab_layers"
                android:layout_alignStart="@+id/fab_layers"
                android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slider_content">



        </RelativeLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>




</RelativeLayout>