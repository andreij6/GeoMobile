<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        android:background="@color/primary_light">

        <!--android:layout_marginTop="?attr/actionBarSize"-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.google.android.gms.maps.MapView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:cameraTargetLat="38.3448001"
                map:cameraTargetLng="-96.5878515"
                map:cameraZoom="3" />

            <!-- Normal Map Mode Buttons -->
            <!--<com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_map_marker_radius_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_layers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layers_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_below="@+id/fab"
                android:layout_alignEnd="@+id/fab"
                />-->

            <!-- Query Mode Buttons -->
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_crosshairs_gps_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_square_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_below="@+id/fab"
                android:layout_alignEnd="@+id/fab"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/fab_layers"
                android:layout_alignStart="@+id/fab_layers"
                android:visibility="gone"/>

            <!-- Bookmark Mode Buttons -->
            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_content_save_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_bm_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle_white_24dp"
                fab:fab_colorNormal="@color/accent_dark"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_below="@+id/fab"
                android:layout_alignEnd="@+id/fab"
                android:visibility="gone"/>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab_fullscreen_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_circle_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/primary_dark"
                fab:fab_colorRipple="@color/primary_light"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/fab_layers"
                android:layout_alignStart="@+id/fab_layers"
                android:visibility="gone"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/fab_point"
                android:layout_toEndOf="@+id/fab_point"
                android:background="@color/primary_dark_transparency"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/showNavIV1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_nav_orange"
                    android:paddingLeft="-16dp"
                    android:paddingRight="-10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/showNavIV2"
                    android:src="@drawable/ic_logo_g_orange"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="-18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/geounderground"
                    android:gravity="center"
                    android:id="@+id/editText2"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/showLayersIV"
                    android:src="@drawable/ic_layers_white_36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getLocationIB"
                android:src="@drawable/ic_crosshairs_gps_grey600_36dp"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:background="@color/white_transparency"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/slider_content">
        </RelativeLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>