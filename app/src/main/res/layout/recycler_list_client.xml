<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_client_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/clientLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/clientTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:paddingTop="5sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/clientNameLabel"
            android:textColor="@android:color/black"
            android:layout_below="@+id/clientTypeLabel"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/impersonate"
            android:id="@+id/impersonate"
            android:textColor="@android:color/black"
            android:layout_below="@+id/clientNameLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="?android:attr/selectableItemBackground"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>