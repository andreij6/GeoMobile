<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="vertical"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/styleIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_contrast_circle_black_24dp"
                android:paddingTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/edit_style"
                android:id="@+id/styleTV"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/renameIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_rename_box_black_24dp"
                android:paddingTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/rename"
                android:id="@+id/renameTV"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/action_dialog_padding"
        android:paddingBottom="@dimen/action_dialog_padding">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deleteIV"
            android:src="@drawable/ic_delete_black_24dp"
            android:paddingTop="12dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/actionDialog_textView"
            android:text="@string/delete"
            android:id="@+id/deleteTV"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>