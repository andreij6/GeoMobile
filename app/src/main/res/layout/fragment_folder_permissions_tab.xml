<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundImageView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:minHeight="100dp"
        android:src="@drawable/ic_folder_lock_grey600_24dp"
        android:contentDescription="@string/folder_permissions_icon"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/permissionsTV"
        android:layout_below="@+id/backgroundImageView"
        android:layout_alignParentStart="true"
        android:paddingLeft="40dp"
        android:paddingBottom="10dp"
        android:textColor="@color/primary_dark"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/permissionsTV"
        android:background="@color/primary_light">
    </RelativeLayout>

</RelativeLayout>