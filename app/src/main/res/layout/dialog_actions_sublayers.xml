<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_alignParentEnd="true"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/styleIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_contrast_circle_black_24dp"
                android:paddingTop="12dp"
                android:contentDescription="@string/edit_style"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/edit_style"
                android:id="@+id/styleTV"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/renameIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_rename_box_black_24dp"
                android:paddingTop="12dp"
                android:contentDescription="@string/rename_sublayer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/rename"
                android:id="@+id/renameTV"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filtersIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_filter_outline_black_24dp"
                android:paddingTop="12dp"
                android:contentDescription="@string/edit_filter"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/edit_filter"
                android:id="@+id/filterTV"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/actionDialog_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteIV"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_delete_black_24dp"
                android:paddingTop="12dp"
                android:contentDescription="@string/delete_sublayer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/actionDialog_textView"
                android:text="@string/delete"
                android:id="@+id/deleteTV"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>