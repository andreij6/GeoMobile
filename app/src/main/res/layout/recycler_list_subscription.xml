<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_client_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/clientLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/clientNameLabel"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            tools:text="AA Testing Client"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impersonate"
            android:textAllCaps="true"
            android:id="@+id/impersonate"
            android:textColor="@color/accent"
            android:layout_below="@+id/clientNameLabel"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>