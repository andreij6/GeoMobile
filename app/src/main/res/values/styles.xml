<resources>

    <style name="GeoUndergroundTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <!--<item name="android:actionBarStyle">@style/GeoActionBar</item>-->
        <item name="actionBarSize">48dp</item>
        <item name="android:actionBarSize">48dp</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="GeoActionBar">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Panel Layouts -->
    <style name="PanelInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="TreePanelHorizontal">
        <item name="android:layout_marginLeft">72dp</item>
    </style>

    <style name="TreePanelImageViewStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TreePanelSectionStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="TreePanelTextViewStyle">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">56dp</item>
    </style>
    <!-- End Panel Layouts -->

    <!-- Action Dialogs -->
    <style name="actionDialog_linearLayout">
        <item name="android:paddingBottom">@dimen/action_dialog_padding</item>
        <item name="android:paddingTop">@dimen/action_dialog_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="actionDialog_textView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="table_columnName">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!-- Clickable ImageButtons -->
    <style name="information_img_btn">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingRight">@dimen/infobuttonPadding</item>
        <item name="android:paddingLeft">@dimen/infobuttonPadding</item>
    </style>

    <style name="rippleBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Spinner Styles -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:dropDownSelector">@color/accent_blue</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">10dp</item>
    </style>

</resources>
